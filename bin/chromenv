#!/bin/sh
cd `dirname $0`
cd ../
CHROMENV_HOME=$(pwd)
touch $CHROMENV_HOME/default_version
NOW_VERSION=$(cat $CHROMENV_HOME/default_version)

if [ $1 = "versions" ]; then
  source $CHROMENV_HOME/libexec/versions
elif [ $1 = "update" ]; then
  source $CHROMENV_HOME/libexec/update
elif [ $1 = "install" ]; then
  if [ $2 = "-l" ]; then
    source $CHROMENV_HOME/libexec/install-l
  else
    source $CHROMENV_HOME/libexec/install
  fi
elif [ $1 = "global" ]; then
  source $CHROMENV_HOME/libexec/global
elif [ $1 = "local" ]; then
  echo "[WIP] will set local chromenv"
elif [ $1 = "help" ]; then
  echo "[WIP] will set local chromenv"
  source $CHROMENV_HOME/libexec/help
fi
